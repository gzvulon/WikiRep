[color]
    branch = auto
    diff = auto
    status = auto
[user]
	email = roeib@infinidat.com
	name = Roei Bar Aviv

[alias]
    b = branch
    a = add
    g = grep
    d = diff
    s = status
    c = commit
    co = checkout
    ai = add -i
    ap = add -p
    co = checkout
    dc = diff --cached
    ds = !git --no-pager diff --stat
    dw = diff --color-words
    fix = commit --amend --no-edit
    flush = checkout --force
    l = log --graph --decorate --pretty=oneline --abbrev-commit
    la = log --graph --decorate --pretty=oneline --abbrev-commit --all
    lg = log --graph --pretty=format:'%C(yellow)%h%C(bold red)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lp = log --patch
    ls = log --stat
    ri = rebase -i
    unstage = reset --
	rb = =

[color]
    ui = auto

[color "diff"]
    old = red bold
    new = green bold
    frag = magenta bold

[core]
    pager = less
    sparseCheckout = true
	excludesfile = /Users/roeib/.gitignore_global

[diff]
    renamelimit = 0
    renames = copy
    ignoreSubmodules = dirty

[push]
    default = upstream

[rebase]
    stat = true

[pull]

[gui]
    fontui = -family Ubuntu -size 10 -weight normal -slant roman -underline 0 -overstrike 0
    fontdiff = -family \"Ubuntu Mono\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0

[svn]
    rmdir = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
